[Unit]
Description=Docker Compose Application Service
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/kieranhitchcock/documents/tab-scraper/
ExecStart=/usr/bin/docker run --network=tab-scraper_backend --name="tab_scraper" tab_scraper
ExecStop=/usr/bin/docker stop tab_scraper
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target